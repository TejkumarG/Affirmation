<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.V21.Theme.Motivation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color palettes -->
        <item name="colorPrimary">@color/pickled_bluewood</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/royal_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/pickled_bluewood</item>

        <item name="android:textColorPrimary">@color/pickled_bluewood</item>
        <item name="android:textColorSecondary">@color/shuttle_gray</item>
        <item name="android:textColorTertiary">@color/manatee</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/pickled_bluewood</item>
        <item name="colorSurface2">@color/white_lilac</item>
        <item name="colorOnSurface2">@color/pickled_bluewood</item>

        <item name="colorError">@color/thunderbird</item>
        <item name="colorOnError">@color/white</item>

        <item name="colorWarning">@color/lighting_yellow</item>
        <item name="colorOnWarning">@color/pickled_bluewood</item>

        <item name="colorGreen">@color/emerald</item>
        <item name="colorOnGreen">@color/pickled_bluewood</item>

        <item name="colorDisabled">@color/alto</item>
        <item name="colorOnDisabled">@color/silver_chalice</item>

        <item name="buttonStrokeColor">@color/white_lilac</item>
        <item name="buttonStrokeColorGreen">@color/emerald</item>
        <item name="buttonStrokeColorRed">@color/thunderbird</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="textInputLayoutStrokeColor">@color/catskill_white</item>
        <item name="textInputLayoutStrokeColorActive">@color/catskill_white</item>

        <item name="switchTrackNotChecked">@color/catskill_white</item>

        <item name="starStrokeTint">@color/pickled_bluewood</item>
    </style>

    <style name="Base.Theme.Motivation" parent="Base.V21.Theme.Motivation" />

    <style name="Theme.Motivation" parent="Base.Theme.Motivation">
        <!-- Dialog themes. -->
        <item name="bottomSheetDialogTheme">@style/Theme.Motivation.BottomSheetDialog</item>
        <item name="android:dialogTheme">@style/Theme.Motivation.Dialog</item>

        <!-- Widget styles -->
        <item name="android:progressBarStyle">@style/Widget.Motivation.ProgressBar</item>
        <item name="materialButtonStyle">@style/Widget.Motivation.Button</item>
        <item name="bottomNavigationStyle">@style/Widget.Motivation.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/Widget.Motivation.CardView</item>
        <item name="checkboxStyle">@style/Widget.Motivation.CheckBox</item>
        <item name="materialCardViewSurface2Style">@style/Widget.Motivation.CardView.Surface2</item>
        <item name="toolbarStyle">@style/Widget.Motivation.Toolbar</item>
        <item name="android:textViewStyle">@style/Widget.Motivation.TextView</item>
        <item name="materialDividerStyle">@style/Widget.Motivation.Divider</item>
        <item name="switchStyle">@style/Widget.Motivation.Switch</item>

        <!-- Type styles -->
        <item name="textAppearanceHeadline3">@style/TextAppearance.Motivation.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Motivation.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Motivation.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Motivation.Headline6</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Motivation.TitleLarge</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Motivation.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Motivation.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Motivation.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Motivation.Body2</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Motivation.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Motivation.BodySmall</item>
        <item name="textAppearanceBody2FontMedium">@style/TextAppearance.Motivation.Body2.FontMedium</item>
        <item name="textAppearanceBody2FontBold">@style/TextAppearance.Motivation.Body2.FontBold</item>
        <item name="textAppearanceBody2Secondary">@style/TextAppearance.Motivation.Body2.Secondary</item>
        <item name="textAppearanceButton">@style/TextAppearance.Motivation.Button</item>

        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="Theme.Motivation.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.Motivation.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenBackground">@color/pickled_bluewood</item>
        <item name="postSplashScreenTheme">@style/Theme.Motivation.NoActionBar</item>
    </style>

    <style name="Theme.Motivation.Dialog">
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/dialog_material_background</item>
        <item name="android:windowElevation">@dimen/abc_floating_window_z</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="dialogStrokeColor">?attr/colorPrimary</item>
        <item name="dialogStrokeWidth">0dp</item>
        <item name="dialogMargin">@dimen/offset_regular</item>
    </style>

    <style name="Theme.Motivation.BottomSheetDialog" parent="Theme.Motivation.Dialog">
        <item name="bottomSheetStyle">@style/Widget.Motivation.BottomSheet</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">
            @style/Animation.MaterialComponents.BottomSheetDialog
        </item>
    </style>
</resources>
